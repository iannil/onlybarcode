echo "🔍 Running linting and tests before commit..."

# Run linting
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Linting failed! Commit aborted."
  exit 1
fi

# Run tests (non-watch mode)
npm run test:run
if [ $? -ne 0 ]; then
  echo "❌ Tests failed! Commit aborted."
  exit 1
fi

echo "✅ All checks passed! Proceeding with commit..."
