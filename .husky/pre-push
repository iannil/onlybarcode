echo "🔍 Running full test suite and linting before push..."

# Run linting
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Linting failed! Push aborted."
  exit 1
fi

# Run tests
npm run test:run
if [ $? -ne 0 ]; then
  echo "❌ Tests failed! Push aborted."
  exit 1
fi

echo "✅ All checks passed! Proceeding with push..." 